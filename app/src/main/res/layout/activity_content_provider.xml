<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:layout_height="45dp"
        android:gravity="center"
        android:text="ContentProvider测试"
        android:textSize="24sp"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="查询所有数据"
        android:id="@+id/select"
        />
    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="姓名："/>
        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
            android:id="@+id/name"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="年龄："/>
        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
            android:id="@+id/age"/>
    </LinearLayout>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="插入数据"
        android:id="@+id/insert"
        />
    <LinearLayout android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="要删除的人员姓名："/>
        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
            android:id="@+id/delete_name"/>
    </LinearLayout>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="删除数据"
        android:id="@+id/delete"/>

    <LinearLayout android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="原姓名："/>
        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
            android:id="@+id/yuan_data"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="更新为："/>
        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
            android:id="@+id/new_data"/>
    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="修改"
        android:id="@+id/update"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="数据如下："/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/select_data"/>
</LinearLayout>